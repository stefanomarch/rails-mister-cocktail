
<h1 class="title">All cocktails</h1>


<div class="container">
  <h1 class="title">All cocktails</h1>
    <div class="cards">
    <% @cocktails.each do |cocktail| %>
  <%= link_to cocktail.name, cocktail_path(cocktail.id), class: "card-category", style:"background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)"%>
    <% end %>
</div>
<%= link_to 'add cocktail', new_cocktail_path, class: "btn btn-primary" %>
</div>



