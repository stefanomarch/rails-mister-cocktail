<div class="container">
  <h1 class="title neon"><span><%= @cocktail.name %></span></h1>

  <div class="cocktail-card">
    <%= cl_image_tag @cocktail.photo.key, height: 500, width: 600, crop: :fill ,class: "border-neon" %>
     <div class="doses-container">
       <ul id='class-list' class="doses-list">
        <% @cocktail.doses.each do |dose| %>
      <div class="dose-card">
      <li><%= dose.description %> of <%= dose.ingredient.name %></li>
      <%= link_to 'x', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%>
    </div>
    <% end %>
  </ul>
  <%= link_to "add dose", new_cocktail_dose_path(@cocktail) %>


  </div>
  </div>






<!-- for face detection -->
  <%= link_to "all cocktails", root_path, class: "bottone" %>
</div>

