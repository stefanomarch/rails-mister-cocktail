<h1>show page</h1>
<div class="container">
  <h1 class="title"><%= @cocktail.name %></h1>

   <ol id='class-list'>
    <% @cocktail.doses.each do |dose| %>
    <div >
      <li><%= dose.description %><%= dose.ingredient.name %><%= link_to 'x', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary"%></li>
    </div>
    <% end %>
  </ol>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<!-- for face detection -->
<%= cl_image_tag(@cocktail.photo.key,
      width: 150, height: 150, crop: :thumb, gravity: :face) %>
  <%= link_to "add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  <%= link_to "all cocktails", root_path, class: "btn btn-primary" %>
</div>

